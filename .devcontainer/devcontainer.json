{
  "name": "Page Migration",
  "image": "mcr.microsoft.com/devcontainers/ruby:3.3",
  "runArgs": ["--network=host"],
  "containerEnv": {
    "DATABASE_URL": "postgres://postgres:postgres@host.docker.internal:5432/wk_dev"
  },
  "forwardPorts": [3000],
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp"
      ],
      "settings": {
        "rubyLsp.enableExperimentalFeatures": true
      }
    }
  },
  "postCreateCommand": ".devcontainer/post-create.sh",
  "remoteUser": "vscode"
}
