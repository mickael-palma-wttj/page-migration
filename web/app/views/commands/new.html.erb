<% content_for(:title) { "Run Command - Page Migration" } %>

<div class="space-y-6">
  <nav class="text-sm text-wttj-gray-dark">
    <%= link_to "Commands", commands_path, class: "hover:text-wttj-black" %> /
    <span class="text-wttj-black">New</span>
  </nav>

  <h1 class="text-3xl font-bold text-wttj-black">Run Command</h1>

  <div class="bg-white rounded-lg shadow-sm border border-wttj-gray-light p-6">
    <%= form_with url: commands_path, method: :post, class: "space-y-6" do |f| %>
      <!-- Command Selection -->
      <div>
        <label class="block text-sm font-medium text-wttj-black mb-2">Command</label>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-3">
          <% CommandRun::COMMANDS.each do |cmd| %>
            <label class="relative cursor-pointer">
              <input type="radio" name="command" value="<%= cmd %>"
                     <%= "checked" if @command == cmd %>
                     class="peer sr-only">
              <div class="p-3 rounded-lg border border-wttj-gray-light text-center peer-checked:border-wttj-yellow peer-checked:bg-wttj-yellow peer-checked:bg-opacity-10 hover:border-wttj-gray-dark transition-colors">
                <span class="font-medium text-wttj-black"><%= cmd.capitalize %></span>
              </div>
            </label>
          <% end %>
        </div>
      </div>

      <!-- Organization Reference -->
      <div>
        <label for="org_search" class="block text-sm font-medium text-wttj-black mb-2">
          Organization
          <span class="text-wttj-gray-medium font-normal">(required for most commands)</span>
        </label>
        <div class="relative" data-controller="autocomplete" data-autocomplete-url-value="<%= search_organizations_path %>">
          <input type="hidden" name="org_ref" data-autocomplete-target="hidden" value="<%= @org_ref %>">
          <div class="flex gap-2">
            <div class="flex-1 relative">
              <input type="text" id="org_search"
                     data-autocomplete-target="input"
                     data-action="input->autocomplete#search keydown->autocomplete#keydown blur->autocomplete#blur focus->autocomplete#focus"
                     value="<%= @org_ref %>"
                     placeholder="Search by name or reference..."
                     autocomplete="off"
                     class="w-full px-4 py-2 rounded-lg border border-wttj-gray-light focus:border-wttj-yellow focus:ring-2 focus:ring-wttj-yellow focus:ring-opacity-50 outline-none transition-colors">
              <div data-autocomplete-target="results"
                   class="absolute z-50 top-full left-0 right-0 mt-1 bg-white border border-wttj-gray-light rounded-lg shadow-lg max-h-64 overflow-y-auto hidden">
              </div>
            </div>
            <button type="button"
                    data-action="click->autocomplete#clear"
                    class="text-wttj-gray-dark hover:text-wttj-black px-3 py-2 rounded border border-wttj-gray-light hover:border-wttj-yellow transition-colors">
              Clear
            </button>
          </div>
          <div data-autocomplete-target="display" class="mt-2 text-sm text-wttj-gray-dark hidden"></div>
        </div>
      </div>

      <!-- Options -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label for="format_option" class="block text-sm font-medium text-wttj-black mb-2">Format</label>
          <select name="format_option" id="format_option"
                  class="w-full px-4 py-2 rounded-lg border border-wttj-gray-light focus:border-wttj-yellow focus:ring-2 focus:ring-wttj-yellow focus:ring-opacity-50 outline-none transition-colors">
            <option value="json">JSON (full structure)</option>
            <option value="simple-json">Simple JSON (flat content)</option>
          </select>
        </div>

        <div>
          <label for="language" class="block text-sm font-medium text-wttj-black mb-2">Language</label>
          <select name="language" id="language"
                  class="w-full px-4 py-2 rounded-lg border border-wttj-gray-light focus:border-wttj-yellow focus:ring-2 focus:ring-wttj-yellow focus:ring-opacity-50 outline-none transition-colors">
            <option value="fr">French (fr)</option>
            <option value="en">English (en)</option>
            <option value="de">German (de)</option>
            <option value="es">Spanish (es)</option>
            <option value="cs">Czech (cs)</option>
          </select>
        </div>
      </div>

      <!-- Submit -->
      <div class="flex justify-end gap-4 pt-4 border-t border-wttj-gray-light">
        <%= link_to "Cancel", commands_path, class: "px-4 py-2 text-wttj-gray-dark hover:text-wttj-black transition-colors" %>
        <%= f.submit "Run Command", class: "bg-wttj-yellow hover:bg-yellow-400 text-wttj-black font-semibold px-6 py-2 rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
