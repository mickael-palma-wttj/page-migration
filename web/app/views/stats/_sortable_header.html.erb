<%
  is_current = @sort == column
  next_direction = is_current && @direction == "asc" ? "desc" : "asc"
  align_class = case align
                when "right" then "text-right"
                when "center" then "text-center"
                else "text-left"
                end
%>
<th class="px-4 py-3 <%= align_class %> text-sm font-semibold text-wttj-black">
  <%= link_to stats_path(size: @size, sort: column, direction: next_direction),
      class: "inline-flex items-center gap-1 hover:text-wttj-yellow transition-colors #{is_current ? 'text-wttj-black' : 'text-wttj-gray-dark'}" do %>
    <%= label %>
    <% if is_current %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <% if @direction == "asc" %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
        <% else %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        <% end %>
      </svg>
    <% else %>
      <svg class="w-4 h-4 opacity-0 group-hover:opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
      </svg>
    <% end %>
  <% end %>
</th>
